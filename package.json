{
  "name": "hoon-assist",
  "displayName": "Hoon Assist",
  "description": "A package that displays documentation for Hoon runes and standard library functions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:hoon-assist.activate",
    "onLanguage:hoon"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hoon-assist.activate",
        "title": "Activate Hoon Assist"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "hoon-assist",
          "title": "Hoon Assist",
          "icon": ""
        }
      ]
    },
    "views": {
      "hoon-assist": [
        {
          "type": "webview",
          "id": "hoon-assist-viewer",
          "name": "Viewer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.5.2"
  }
}
